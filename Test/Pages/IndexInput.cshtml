@page
@model Test.Pages.IndexInputModel
@{
}

<div class="container">
    <h3>Add New User</h3>

    <form method="post">
        <div class="mb-3">
            <label>First Name</label>
            <input type="text" asp-for="Input.FirstName" class="form-control" placeholder="Введіть ім'я" />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>Last Name</label>
            <input type="text" asp-for="Input.LastName" class="form-control" placeholder="Введіть прізвище" />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>

        <button type="submit" asp-page-handler="Save" class="btn btn-primary">Save</button>
        <button type="submit" asp-page-handler="Delete" class="btn btn-danger">Delete</button>
    </form>

    <hr />

    @if (!string.IsNullOrEmpty(Model.FirstName))
    {
        <div class="alert alert-success">
            Saved: @Model.FirstName @Model.LastName (Created: @Model.CreatedDate)
        </div>
    }
</div>